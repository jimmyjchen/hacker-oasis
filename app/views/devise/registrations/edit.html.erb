<div class="submenu-tall" style="justify-content: center">
  <h4 class="sub-header">Edit <%= resource_name.to_s.humanize %></h4>
</div>

<div class="container">
  <div class="row form-add-project">
    <div class="col-lg-8">
      <div class="form-box">

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password,
                        hint: "Leave blank if you don't want to change it",
                        required: false,
                        input_html: { autocomplete: "password" } %>
            <%= f.input :password_confirmation,
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :first_name,
                        hint: "Leave blank if you don't want to change it",
                        required: false,
                        input_html: { autocomplete: "first_name" } %>
            <%= f.input :last_name,
                        hint: "Leave blank if you don't want to change it",
                        required: false,
                        input_html: { autocomplete: "last_name" } %>
            <%= f.input :username,
                        hint: "Leave blank if you don't want to change it",
                        required: false,
                        input_html: { autocomplete: "username" } %>
            <%= f.input :city,
                        hint: "Leave blank if you don't want to change it",
                        required: false,
                        input_html: { autocomplete: "city" } %>
            <%= f.input :country,
                        hint: "Leave blank if you don't want to change it",
                        required: false,
                        input_html: { autocomplete: "country" } %>
            <%= f.input :wechatid,
                        hint: "Leave blank if you don't want to change it",
                        required: false,
                        input_html: { autocomplete: "wechatid" } %>
            <%= f.input :linkedin,
                        hint: "Leave blank if you don't want to change it",
                        required: false,
                        input_html: { autocomplete: "linkedin" } %>
            <%= f.input :github,
                        hint: "Leave blank if you don't want to change it",
                        required: false,
                        input_html: { autocomplete: "github" } %>
            <%= f.label :name, "User skills (ex. blockchain, javascript, ruby, wechat, etc.)" %>
                <div data-tags-input-name="user[skills]" id="tag"></div>
                <p>Press enter, comma or spacebar to create a new tag; backspace or delete to remove.</p>
            <%= f.input :avatar,
                        required: false %>
            <%= f.input :avatar_cache, as: :hidden %>
            <%= f.input :current_password,
                        hint: "We need your current password to confirm your changes",
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Update", class: "btn-signup" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
<div class="log-in-alt">
  <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>

