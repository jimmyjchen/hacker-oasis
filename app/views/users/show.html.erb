<div class="container">
  <div class="row" style="justify-content: center;">

    <div class="col-md-4">
      <div class="box-user-profile">
        <div class="container">
          <%= link_to user_path(@user) do %>
          <img src="<%= @user.avatar.url %>" class="avatar-large">
          <h5><%= @user.username %></h5>
          <% end %>
          <div class="location">
            <i class="fas fa-map-marker-alt"></i> Shanghai, China
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="container">
        <div class="row">
          <% @user.projects.each do |project| %>
            <div class="col-xl-6">
              <%= link_to project_path(project) do %>
                <div class="card">
                  <%= cl_image_tag project.cover_photo, crop: :fill, alt: "image", class: "card-img-top" %>
                  <div class="card-body">
                    <div class="card-content-header">
                      <h6><%= project.name %></h6>
                      <div class="list-avatars">
                        <%= image_tag "ericd.jpg", class: "avatar-small" %>
                        <%= image_tag "bingq.jpg", class: "avatar-small" %>
                        <%= image_tag "nicoleg.jpg", class: "avatar-small" %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>

