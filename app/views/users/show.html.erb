<div class="container">
  <div class="row" style="justify-content: center;">

    <div class="col-md-4">
      <div class="box-user-profile">
        <div class="container">
          <%= link_to user_path(@user) do %>
          <img src="<%= @user.profile_avatar_url %>" class="avatar-large">
          <h5><%= @user.username %></h5>
          <% end %>
          <div class="location">
            <i class="fas fa-map-marker-alt"></i> | <%= @user.city %>, <%= @user.country %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="container">
        <div class="card-section-header">
          <h5>My Projects</h5>
        </div>
        <div class="row">
          <% if @user.projects.empty? %>
            <p class="d-flex w-100 justify-content-center font-italic mt-3">You do not have any active projects. What are you waiting for?</p>
          <% else %>
            <% @user.projects.each do |project| %>
            <div class="col-xl-6">
              <%= link_to project_path(project) do %>
                <div class="card">
                  <%= cl_image_tag project.cover_photo, crop: :fill, alt: "image", class: "card-img-top" %>
                  <div class="card-body">
                    <div class="card-content-header">
                      <h6><%= project.name %></h6>
                      <div class="avatar-list">
                        <% project.collaborations.map do |collaboration| %>
                          <%= link_to user_path(collaboration.user) do %>
                            <img src="<%= collaboration.user.profile_avatar_url %>" class="avatar-small" data-toggle="tooltip" data-placement="top" title="<%= collaboration.user.username %>">
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
            <% end %>
          <% end %>
        </div>

        <div class="card-section-header">
          <h5>My Collaborations</h5>
        </div>
        <div class="row">
          <% if @user.collaborations.empty? %>
            <p class="d-flex w-100 justify-content-center font-italic mt-3">You do not have any active collaborations. Go find some interesting projects!</p>
          <% else %>
            <% @user.collaborations.each do |collaboration| %>
            <div class="col-xl-6">
              <%= link_to project_path(collaboration.project) do %>
                <div class="card">
                  <%= cl_image_tag collaboration.project.cover_photo, crop: :fill, alt: "image", class: "card-img-top" %>
                  <div class="card-body">
                    <div class="card-content-header">
                      <h6><%= collaboration.project.name %></h6>
                      <div class="avatar-list">
                        <% collaboration.project.collaborations.map do |collaboration| %>
                          <%= link_to user_path(collaboration.user) do %>
                            <img src="<%= collaboration.user.profile_avatar_url %>" class="avatar-small" data-toggle="tooltip" data-placement="top" title="<%= collaboration.user.username %>">
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


