<%= @project.name %>
<%= @project.description %>
<p><%= @project.user.first_name %>

<% if policy(@project).edit? %>
<%= link_to 'Edit Project', edit_project_path(@project), class: "btn btn-light" %>
<% end %>
<% if policy(@project).destroy? %>
<%= link_to 'Destroy Project', projects_path, method: 'delete', class: "btn btn-light" %>
<% end %>




