<%= @project.name %>
<%= @project.description %>
<p><%= @project.user.first_name %>

<% if policy(@project).edit? %>
<%= link_to 'Edit Project', edit_project_path(@project), class: "btn btn-light" %>
<% end %>
<% if policy(@project).destroy? %>
<%= link_to 'Destroy Project', project_path(@project), method: 'delete', class: "btn btn-light" %>
<% end %>


<!-- COMMENTS -->
<!-- Number of comments in this project -->
<p>Number of comments: <%= @project.comments.size %></p>

<!-- All the comements -->
<% @project.comments.each do |c| %>
<p><%= c.user.username %></p>
<p><%= c.content %></p>
<% end %>

<!-- Adding a new comment -->
<%= simple_form_for [@project, @comment] do |f| %>
  <%= f.input :content %>
  <%= f.submit %>
<% end -%>
<!-- END OF COMMENTS -->

<!-- COLLABORATIONS ----------->

<%= simple_form_for [@project, @collaboration] do |f| %>
<%= f.input :user_id %>
<%= f.input :project_id %>
<%= f.submit %>
<% end -%>

<% @project.collaborations.each do |collaboration| %>
<%= collaboration.user.email %>
<% end %>


