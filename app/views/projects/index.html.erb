<% if user_signed_in? == false %>
  <div class="banner-index">
    <div class="banner-text">
      <h3>Explore other hackers' projects.</h3>
      <h3 style="margin-bottom: 28px;">Share your own.</h3>
      <%= link_to "User.new",new_user_registration_path, class: "btn-signup"  %>
    </div>
  </div>
<% end %>

<div class="submenu">
  <%= link_to "Newest", "#", class: "btn-filter" %>
</div>

<!-- show all projects -->

  <!-- Only the name of the project is clickable -->

<!-- cl_image_tag(project.cover_photo, :width => 200, :height => 150, :crop => :fill) -->

<div class="container">
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <%= link_to project_path(project) do %>
          <div class="card">
            <%= cl_image_tag project.cover_photo, crop: :fill, alt: "image", class: "card-img-top" %>
            <div class="card-body">
              <div class="card-content-header">
                <h6><%= project.name %></h6>
                <div class="list-avatars">
                  <%= image_tag "ericd.jpg", class: "avatar-small" %>
                  <%= image_tag "bingq.jpg", class: "avatar-small" %>
                  <%= image_tag "nicoleg.jpg", class: "avatar-small" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
